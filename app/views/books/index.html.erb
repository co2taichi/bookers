<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag 'index', media: 'all'%>
  </head>
  <body>
    <h1>Books</h1>
    <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
      <% @lists.each do |list| %>
        <tr>
          <td><%= list.title %></td>
          <td><%= list.body %></td>
          <td class = "get_pages">
            <span><%= link_to "Show", "/books/#{list.id}" %></span>
            <span><%= link_to "Edit", "/books/#{list.id}/edit" %></span>
         　  <span><%= link_to "Destroy", "/books/#{list.id}", method: :delete, "data-confirm" => "本当に削除しますか？"%></span>
          </td>
        </tr>
      <% end %>

    </table>

    <h2>New book</h2>

    <%= form_with model: @list , url: "/books"  do |f| %>
      <div class="input_field">
        <h4>Title</h4>
        <%= f.text_field :title %>
      </div>
      <div class="input_field">
        <h4>Body</h4>
        <%= f.text_area :body %>
      </div>
      <%= f.submit 'Create Book' %>
    <% end %>
  </body>
</html>